{
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.autoSave": "onWindowChange",
  "folder-color.pathColors": [
    {
      "folderPath": "split-app/messages/",
      "color": "foldercolorizer.color_cccc33",
      "badge": "💬"
    },
    {
      "folderPath": "split-app/lib/",
      "color": "foldercolorizer.color_ff6699",
      "badge": "💼"
    },
    {
      "folderPath": "split-app/components/",
      "color": "foldercolorizer.color_cc6600",
      "badge": "📐"
    },
    {
      "folderPath": "split-app/app/",
      "color": "foldercolorizer.color_00cccc",
      "badge": "🅰️"
    },
    {
      "folderPath": "split-app/hooks/",
      "color": "foldercolorizer.color_666699",
      "badge": "🗜️"
    },
    {
      "folderPath": "split-app/app/api/",
      "color": "foldercolorizer.color_0066ff"
    },
    {
      "folderPath": "split-app/server/",
      "color": "foldercolorizer.color_00cc66"
    }
  ]
}
